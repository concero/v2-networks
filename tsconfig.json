{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"moduleResolution": "node", // Add this
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node"]
	},
	"include": ["**/*.ts", "**/*.json"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
